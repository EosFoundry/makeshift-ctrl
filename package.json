    "@electron-forge/plugin-auto-unpack-natives": "^6.2.1",
    "@electron-forge/plugin-vite": "^6.2.1",
    "@types/uuid": "^9.0.2",
    "@vitejs/plugin-vue": "^4.2.3",
    "ace-builds": "^1.23.4",
    "electron": "^25.2.0",
    "electron-builder": "^24.6.3",
    "semver": "^7.5.4",
    "ts-morph": "^19.0.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
